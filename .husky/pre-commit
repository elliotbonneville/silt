#!/usr/bin/env sh
set -e

# All validation checks must pass before commit
echo "ğŸ” Running pre-commit validation..."
echo ""

npm run lint || exit 1
npm run type-check || exit 1

# Run tests only if test files exist (exit 0 if no tests found)
npm test -- --run --passWithNoTests || exit 1

npm run check-file-size || exit 1
npm run check-unused-exports || exit 1

echo ""
echo "âœ… All pre-commit checks passed!"
